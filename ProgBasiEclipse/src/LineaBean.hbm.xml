<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="LineaBean" table="linea">
        <!-- Identificatore. -->
        <id name="Codice" column="codice"/>
        <!-- Proprieta'. -->
        <property name="Durata_Media" column="durata_media" not-null="true"/>        
        
        <!-- Relazione tra Linea(1,n) e Biglietto(1,n). --> 
		 <set name="Biglietto" table="b_l" lazy="true" fetch="select" cascade="all"> 
		 <key column="codice_linea" not-null="true"/> 
		 <many-to-many column="cod_emissione" class="BigliettoBean"/> 
		 </set>
		 
		<!-- Relazione tra Linea(1,n) e Corsa(1,1). -->
        <set name="corse" table="corsa" lazy="true">
            <key column="codice"/>
            <one-to-many class="CorsaBean"/>
        </set>
        
        <!-- Relazione tra Linea(1,1) e Fermata(0,n). -->
        <many-to-one name="fermatapartenza" column="nome" />
        
        <!-- Relazione tra Linea(1,1) e Fermata(0,n). -->
        <many-to-one name="fermataarrivo" column="nome" />
    </class>
</hibernate-mapping>
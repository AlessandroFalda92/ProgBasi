<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="FermataBean" table="fermata">
		<id name="nome" column="nome"/>

         <!-- Relazione tra Fermata(1,n) e Corsa(1,n). --> 
		 <set name="Corsa" table="c_f" lazy="true" fetch="select" cascade="all"> 
		 <key column="nome" not-null="true"/>
		 <many-to-many column="orario_partenza" class="CorsaBean"/>
	<!--  	 <many-to-many column="codice_linea" class="CorsaBean"/> -->
		 </set>
		<!-- Relazione tra Fermata(1,n) e Biglietto(1,1). -->
        <set name="bigliettoandata" table="biglietto" lazy="true">
            <key column="nome"/>
            <one-to-many class="BigliettoBean"/>
        </set>
        
        <!-- Relazione tra Fermata(1,n) e Biglietto(1,1). -->
        <set name="bigliettoritorno" table="biglietto" lazy="true">
            <key column="nome"/>
            <one-to-many class="BigliettoBean"/>
        </set>
        
        <!-- Relazione tra Fermata(0,n) e Linea(1,1). -->
        <set name="LineaPartenza" table="Linea" lazy="true">
            <key column="nome"/>
            <one-to-many class="LineaBean"/>
        </set>
        
        <!-- Relazione tra Fermata(0,n) e Linea(1,1). -->
        <set name="LineaArrivo" table="Linea" lazy="true">
            <key column="nome"/>
            <one-to-many class="LineaBean"/>
        </set>
	</class>
</hibernate-mapping>
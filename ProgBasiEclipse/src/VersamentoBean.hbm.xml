<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="VersamentoBean" table="versamento">
        <!-- Identificatore. -->
        <composite-id class="String" name="key">
        <key-property name="Data" column="data"/>
        <key-property name="Ora" column="ora"/>
        <key-property name="CF" column="cf"/>
        </composite-id>
        <!-- Proprieta'. -->
        <property name="Importo" column="importo" not-null="true"/>    
        
        <!-- Relazione tra Versamento(1,1) e Cliente(1,n). -->
        <many-to-one name="clienteversamento" column="cf" />
    </class>
</hibernate-mapping>